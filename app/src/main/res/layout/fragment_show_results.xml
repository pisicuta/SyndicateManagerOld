<?xml version="1.0" encoding="utf-8"?>
<!--
This will check for the winning rows using the latest draw numbers or
any numbers draw numbers selected by date, date range or draw day
-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_section4"
        android:padding="5dp"
        android:textSize="16sp"/>

    <!-- A RecyclerView with some commonly used attributes -->
    <android.support.v7.widget.RecyclerView
        android:id="@+id/draw_history_recycler_view"
        android:scrollbars="vertical"
        android:background="@color/white_transparent"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
